<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SinglePlayerGameActivity"
    android:orientation="vertical">

    <!--Badge-->
    <LinearLayout
        android:id="@+id/badge_and_name_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        >
        <TextView
            android:id="@+id/player_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_weight="2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@{player.playerName}"/>
        <ImageView
            android:id="@+id/badge_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/flag_usa"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/anchor_point_for_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>